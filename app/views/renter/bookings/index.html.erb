<div class="wrapper">

<div class= "title">
  <h1>Confirmed Bookings</h1>
</div>

  <% @bookings.each do |booking| %>
    <% if booking.status == "Confirmed" %>
      <div class="booking">
        <div class="pet-photo">
          <%= cl_image_tag booking.pet.photo %>
        </div>
        <div class="booking-body">
          <h3> <%= booking.pet.name %> </h3>
          <p> <%= booking.pet.price%>€ / day </p>
          <p> Owner: <%= booking.pet.user.first_name %> <%= booking.pet.user.last_name %></p>
          <p> Booking status: <%= booking.status %></p>
        </div>
        <ul class="list-unstyled booking-actions">
          <li><%= link_to "Cancel", edit_renter_booking_path(booking) %></li>
        </ul>
      </div>
    <% end %>
  <% end %>

<div class= "title">
  <h1>Cancelled Bookings</h1>
</div>
  <% @bookings.each do |booking| %>
    <% if booking.status == "Cancelled" %>
      <div class="booking">
        <div class="pet-photo">
          <%= cl_image_tag booking.pet.photo %>
        </div>
        <div class="booking-body">
          <h3> <%= booking.pet.name %> </h3>
          <p> <%= booking.pet.price%>€ / day </p>
          <p> Owner: <%= booking.pet.user.first_name %> <%= booking.pet.user.last_name %></p>
          <p> Booking status: <%= booking.status %></p>
        </div>
        <ul class=" list-unstyled booking-actions">
          <li><%= link_to "Remove from history", renter_booking_path(booking), method: "delete" %></li>
        </ul>
      </div>
    <% end %>
  <% end %>

</div>
