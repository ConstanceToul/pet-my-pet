    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="card-white">
          <h3>Tell us about your pet</h3>
          <%= p.input :name, placeholder: 'ex: croquette' %>
          <%= p.input :species, priority: ["dog"], collection: Pet::SPECIES %>

          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= p.input :gender, collection: [ "female", "male"] %>
            </div>
            <div class="col-xs-12 col-md-6">
              <%= p.input :birth_date, start_year: Date.today.year - 18,
                                    end_year: Date.today.year - 90, discard_day: true,
                                    order: [:month, :year] %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= p.input :height, label: "Height (inches)" %>
            </div>
            <div class="col-xs-12 col-md-6">
              <%= p.input :weight, label: "Weight (kg)" %>
            </div>
          </div

          <%= p.input :description, placeholder: 'Jolie chat persane grise, qui est très calin. Attention, il mord de temps en temps. Dans le fond, il est gentil.' %>
          <%= p.input :food, collection:["Croquettes Royal Canin", "Croquettes Friskies", "Repas pour humains", "Graines", "Restes de poulet", "Caviar"], as: :check_boxes%>
          <%= p.input :exercise %>
          <%= p.input :title, label: "Title of your add", hint: "Choose a fun title to attract as many people as possible" %>
        </div>
      </div>
    </div>

      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="card-white">
          <h3>Pictures</h3>
          <%= p.input :picture_url %>
        </div>
      </div>
    </div>
    <div class="card-white">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <h3>Price</h3>
          <%= p.input :price, label: "Daily rental price (€)", hint: '15€ for a nice and beautiful dog, 5€ for an ugly and dangerous cat' %>
        </div>
      </div>
    </div>
  </div>



   <div class="text-center padding">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <%= p.button :submit, 'List my pet !', class: 'button'  %>
          <% end %>
        </div>
      </div>
  </div>
