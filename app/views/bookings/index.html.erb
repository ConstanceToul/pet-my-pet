
<div class="wrapper">

<div class= "title">
<h1> My bookings </h1>
</div>

 <% @bookings.each do |booking| %>
    <% if booking.status == "Confirmed" && booking.user == current_user %>
      <div class="pet-booking">
        <div class="pet-photo">
          <%= cl_image_tag booking.pet.photo %>
        </div>
        <div class="pet-body">
          <h3> <%= booking.pet.name %> </h3>
          <p> <%= booking.pet.price%>€ / day </p>
          <p> Owner: <%= booking.pet.user.first_name %> <%= booking.pet.user.last_name %></p>
        </div>
        <ul class="list-inline pet-actions">
          <li><%= link_to "Cancel", edit_booking_path(booking) %><li>
        </ul>
      </div>
    <% end %>
  <% end %>

<div class= "title">
<h1> My pets' bookings </h1>
</div>

 <% @bookings.each do |booking| %>
    <% if booking.status == "Confirmed" && booking.pet.user == current_user %>
      <div class="pet-booking">
        <div class="pet-photo">
          <%= cl_image_tag booking.pet.photo %>
        </div>
        <div class="pet-body">
          <h3> <%= booking.pet.name %> </h3>
          <p> <%= booking.pet.price%>€ / day </p>
          <p> Renter: <%= booking.user.first_name %> <%= booking.user.last_name %></p>
        </div>
        <ul class="list-inline pet-actions">
          <li><%= link_to "Cancel", edit_booking_path(booking) %><li>
        </ul>
      </div>
    <% end %>
  <% end %>

  <div class= "title">
    <h1> Cancelled bookings </h1>
  </div>

  <% @bookings.each do |booking| %>
  <% if booking.status == "Cancelled" &&  (booking.pet.user == current_user || booking.user == current_user) %>
  <div class="pet-booking">
    <div class="pet-photo">
      <%= cl_image_tag booking.pet.photo %>
    </div>
    <div class="pet-body">
      <h3> <%= booking.pet.name %> </h3>
      <p> <%= booking.pet.price%>€ / day </p>
      <p> Renter: <%= booking.user.first_name %> <%= booking.user.last_name %></p>
      <p> Owner: <%= booking.pet.user.first_name %> <%= booking.pet.user.last_name %></p>
    </div>
    <ul class="list-inline pet-actions">
      <li><%= link_to "Remove", booking_path(booking), method: "delete" %><li>
      </ul>
    </div>
    <% end %>
    <% end %>


  </div>
