<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= asset_path('backgroundpet.png') %>');">
  <div class="banner-content">
    <h1>Pet My Pet!</h1>
    <p>Rent wonderful dogs near where you live</p>
    <%= link_to "Try the experience", root_path, class: "btn btn-primary btn-lg", id: "try" %>
  </div>
  <div class="search">
    <div class="flex-item">
      <input type="address" class="form-control" id="location" placeholder="Pet's address">
    </div>
    <div class="flex-item-date">
      <div class="input-group">
        <input type="text" class="form-control" id="checkin" placeholder="Pet In">
        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      </div>
    </div>
    <div class="flex-item-date">
      <div class="input-group">
        <input type="text" class="form-control" id="checkout" placeholder="Pet Out">
        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      </div>
    </div>
    <div class="flex-item-select">
      <select id="pets" name="Pets" class="form-control">
        <option value="1">Dog</option>
        <option value="2">Cat</option>
      </select>
    </div>
    <div class="flex-item-btnsearch">
     <%= link_to "search", pets_path, class: "btn btn-default btn-primary" %>
    </div>
  </div>
</div>

