<div class="myprofile">
  <div class ="myprofile-body">
  <div id="w">
    <div id="content" class="clearfix">
      <div id="userphoto"><img src="app/assets/images/dog-user.png" alt="My User Photo"></div>
      <h1> My cool profile user</h1>

      <nav id="profiletabs">
        <ul class="clearfix">
          <li><a href="#Key info" class="sel">My info</a></li>
          <li><a href="#pets">pets</a></li>
          <li><a href="#settings">Settings</a></li>
        </ul>
      </nav>

      <section id="Key info">
        <h2> Hello there, this is my profile, check it out! </h2>
        <p><%= @current_user.first_name %> <%= @current_user.last_name.upcase %></p>
        <p>Email :  <%= @current_user.email %></p>
        <p>Address : <%= @current_user.address %></p>


      </section>

      <section id="pets" class="hidden">
        <p>Pets I recommend</p>

        <p class="activity">Careful Brisky eats a lot! </p>

        <p class="activity">Such a good time with Fury</p>

        <p class="activity"> Definitely recommend to bring along Gustave if you wanna run</p>

        <p class="activity">More info to add</p>

        <p class="activity">Still more info to add</p>
      </section>


      <section id="setting" class="hidden">
        <p>Edit your user settings:</p>

        <p class="setting"><span>E-mail Address <img src="images/edit.png" alt="*Edit*"></span> change your mailm</p>

        <p class="setting"><span>Language <img src="images/edit.png" alt="*Edit*"></span> English(US)</p>

        <p class="setting"><span>Profile Status <img src="images/edit.png" alt="*Edit*"></span> Public</p>

        <p class="setting"><span>Update other stuff <img src="images/edit.png" alt="*Edit*"></span> Weekly</p>

        <p class="setting"><span>Update stuff <img src="images/edit.png" alt="*Edit*"></span> None</p>
      </section>
    </div><!-- @end #content -->
  </div><!-- @end #w -->
<script type="text/javascript">
$(function(){
  $('#profiletabs ul li a').on('click', function(e){
    e.preventDefault();
    var newcontent = $(this).attr('href');

    $('#profiletabs ul li a').removeClass('sel');
    $(this).addClass('sel');

    $('#content section').each(function(){
      if(!$(this).hasClass('hidden')) { $(this).addClass('hidden'); }
    });

    $(newcontent).removeClass('hidden');
  });
});
</script>
</div>
</div>



